<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/activity_main"
    android:layout_height="match_parent"
    android:background="@color/background_dark_grey"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="numberSigned|numberDecimal"
        android:textColor="@color/light_grey"
        android:textSize="@dimen/large_font"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/light_grey"
        android:textSize="@dimen/large_font"
        app:layout_constraintBaseline_toBaselineOf="@id/newNumber"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/newNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="numberSigned|numberDecimal"
        android:textColor="@color/light_grey"
        android:textSize="@dimen/large_font"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <Button
        android:id="@+id/button6"
        android:layout_width="65dp"
        android:layout_height="90dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/dark_grey"
        android:minWidth="48dp"
        android:text="@string/six_button"
        android:textSize="@dimen/medium_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/button5"
        app:layout_constraintStart_toEndOf="@+id/button5" />

    <Button
        android:id="@+id/button0"
        android:layout_width="65dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/dark_grey"
        android:minWidth="48dp"
        android:text="@string/zero_button"
        android:textSize="@dimen/medium_font"
        app:layout_constraintStart_toStartOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <Button
        android:id="@+id/button1"
        android:layout_width="65dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/dark_grey"
        android:minWidth="48dp"
        android:text="@string/one_button"
        android:textSize="@dimen/medium_font"
        app:layout_constraintStart_toStartOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button2"
        android:layout_width="65dp"
        android:layout_height="90dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/dark_grey"
        android:minWidth="48dp"
        android:text="@string/two_button"
        android:textSize="@dimen/medium_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/button1"
        app:layout_constraintStart_toEndOf="@+id/button1" />

    <Button
        android:id="@+id/button3"
        android:layout_width="65dp"
        android:layout_height="90dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/dark_grey"
        android:minWidth="48dp"
        android:text="@string/three_button"
        android:textSize="@dimen/medium_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/button2"
        app:layout_constraintStart_toEndOf="@+id/button2" />

    <Button
        android:id="@+id/button4"
        android:layout_width="65dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/dark_grey"
        android:minWidth="48dp"
        android:text="@string/four_button"
        android:textSize="@dimen/medium_font"
        app:layout_constraintStart_toStartOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <Button
        android:id="@+id/button5"
        android:layout_width="65dp"
        android:layout_height="90dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/dark_grey"
        android:minWidth="48dp"
        android:text="@string/five_button"
        android:textSize="@dimen/medium_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/button4"
        app:layout_constraintStart_toEndOf="@+id/button4" />

    <Button
        android:id="@+id/button8"
        android:layout_width="65dp"
        android:layout_height="90dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/dark_grey"
        android:minWidth="48dp"
        android:text="@string/eight_button"
        android:textSize="@dimen/medium_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/button7"
        app:layout_constraintStart_toEndOf="@+id/button7" />

    <Button
        android:id="@+id/button9"
        android:layout_width="65dp"
        android:layout_height="90dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/dark_grey"
        android:minWidth="48dp"
        android:text="9"
        android:textSize="@dimen/medium_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/button8"
        app:layout_constraintStart_toEndOf="@+id/button8" />

    <Button
        android:id="@+id/buttonDott"
        android:layout_width="65dp"
        android:layout_height="90dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/orange"
        android:minWidth="48dp"
        android:text="@string/dott_sign"
        android:textSize="@dimen/medium_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/button0"
        app:layout_constraintStart_toEndOf="@+id/button0" />

    <Button
        android:id="@+id/buttonDiviation"
        android:layout_width="65dp"
        android:layout_height="90dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/orange"
        android:minWidth="48dp"
        android:text="@string/division"
        android:textSize="@dimen/medium_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/button9"
        app:layout_constraintStart_toEndOf="@+id/button9" />

    <Button
        android:id="@+id/buttonMultiplication"
        android:layout_width="65dp"
        android:layout_height="90dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/orange"
        android:minWidth="48dp"
        android:text="@string/multiplication"
        android:textSize="@dimen/medium_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/button6"
        app:layout_constraintStart_toEndOf="@+id/button6" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="65dp"
        android:layout_height="90dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/orange"
        android:minWidth="48dp"
        android:text="@string/addition"
        android:textSize="@dimen/medium_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonPercent"
        app:layout_constraintStart_toEndOf="@+id/buttonPercent" />

    <Button
        android:id="@+id/buttonPercent"
        android:layout_width="65dp"
        android:layout_height="90dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/orange"
        android:minWidth="48dp"
        android:text="@string/percent"
        android:textSize="@dimen/medium_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonDott"
        app:layout_constraintStart_toEndOf="@+id/buttonDott" />

    <Button
        android:id="@+id/buttonSubtraction"
        android:layout_width="65dp"
        android:layout_height="90dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/orange"
        android:minWidth="48dp"
        android:text="@string/subtraction"
        android:textSize="@dimen/medium_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/button3"
        app:layout_constraintStart_toEndOf="@+id/button3" />

    <Button
        android:id="@+id/eraseButton"
        android:layout_width="65dp"
        android:layout_height="90dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/orange"
        android:minWidth="48dp"
        android:text="@string/reset_button"
        android:textSize="@dimen/medium_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonPlus"
        app:layout_constraintStart_toEndOf="@+id/buttonPlus" />

    <Button
        android:id="@+id/buttonPi"
        android:layout_width="65dp"
        android:layout_height="90dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/orange"
        android:minWidth="48dp"
        android:text="@string/pii"
        android:textSize="@dimen/medium_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonMultiplication"
        app:layout_constraintStart_toEndOf="@+id/buttonMultiplication" />

    <Button
        android:id="@+id/buttonRoot"
        android:layout_width="65dp"
        android:layout_height="90dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/orange"
        android:minWidth="48dp"
        android:text="@string/root_out"
        android:textSize="@dimen/medium_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonDiviation"
        app:layout_constraintStart_toEndOf="@+id/buttonDiviation" />

    <Button
        android:id="@+id/button35"
        android:layout_width="65dp"
        android:layout_height="90dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/orange"
        android:minWidth="48dp"
        android:text="x²"
        android:textSize="@dimen/medium_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonSubtraction"
        app:layout_constraintStart_toEndOf="@+id/buttonSubtraction" />

    <Button
        android:id="@+id/button7"
        android:layout_width="65dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/dark_grey"
        android:minWidth="48dp"
        android:text="@string/seven_button"
        android:textSize="@dimen/medium_font"
        app:layout_constraintStart_toStartOf="@+id/newNumber"
        app:layout_constraintTop_toBottomOf="@+id/newNumber" />

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="345dp"
        android:layout_height="71dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/orange"
        android:gravity="center"
        android:minWidth="48dp"
        android:text="@string/equal_sign"
        android:textSize="@dimen/medium_font"
        app:layout_constraintEnd_toEndOf="@+id/eraseButton"
        app:layout_constraintStart_toStartOf="@+id/button0"
        app:layout_constraintTop_toBottomOf="@+id/button0" />

</androidx.constraintlayout.widget.ConstraintLayout>