<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark_grey"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:focusable="false"
        android:textSize="@dimen/large_font"
        android:focusableInTouchMode="false"
        android:textColor="@color/light_grey"
        android:inputType="numberSigned|numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button0"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/dark_grey"
        android:minWidth="48dp"
        android:text="0"
        android:textSize="@dimen/medium_font"
        app:layout_constraintStart_toStartOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <Button
        android:id="@+id/button1"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/dark_grey"
        android:minWidth="48dp"
        android:text="1"
        android:textSize="@dimen/medium_font"
        app:layout_constraintStart_toStartOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button2"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/dark_grey"
        android:minWidth="48dp"
        android:text="2"
        android:textSize="@dimen/medium_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/button1"
        app:layout_constraintStart_toEndOf="@+id/button1" />

    <Button
        android:id="@+id/button3"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/dark_grey"
        android:minWidth="48dp"
        android:text="3"
        android:textSize="@dimen/medium_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/button2"
        app:layout_constraintStart_toEndOf="@+id/button2" />

    <Button
        android:id="@+id/button4"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/dark_grey"
        android:minWidth="48dp"
        android:text="4"
        android:textSize="@dimen/medium_font"
        app:layout_constraintStart_toStartOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <Button
        android:id="@+id/button5"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/dark_grey"
        android:minWidth="48dp"
        android:text="5"
        android:textSize="@dimen/medium_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/button4"
        app:layout_constraintStart_toEndOf="@+id/button4" />

    <Button
        android:id="@+id/button6"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/dark_grey"
        android:minWidth="48dp"
        android:text="6"
        android:textSize="@dimen/medium_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/button5"
        app:layout_constraintStart_toEndOf="@+id/button5" />

    <Button
        android:id="@+id/button7"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/dark_grey"
        android:minWidth="48dp"
        android:text="7"
        android:textSize="@dimen/medium_font"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newNumber" />

    <Button
        android:id="@+id/button8"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/dark_grey"
        android:minWidth="48dp"
        android:text="8"
        android:textSize="@dimen/medium_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/button7"
        app:layout_constraintStart_toEndOf="@+id/button7" />

    <Button
        android:id="@+id/button9"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/dark_grey"
        android:minWidth="48dp"
        android:text="9"
        android:textSize="@dimen/medium_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/button8"
        app:layout_constraintStart_toEndOf="@+id/button8" />

    <Button
        android:id="@+id/buttonDott"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/orange"
        android:minWidth="48dp"
        android:text=","
        android:textSize="@dimen/medium_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/button0"
        app:layout_constraintStart_toEndOf="@+id/button0" />

    <Button
        android:id="@+id/buttonDiviation"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/orange"
        android:minWidth="48dp"
        android:text="/"
        android:textSize="@dimen/medium_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/button9"
        app:layout_constraintStart_toEndOf="@+id/button9" />

    <Button
        android:id="@+id/buttonMultiplication"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/orange"
        android:minWidth="48dp"
        android:text="x"
        android:textSize="@dimen/medium_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/button6"
        app:layout_constraintStart_toEndOf="@+id/button6" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/orange"
        android:minWidth="48dp"
        android:text="+"
        android:textSize="@dimen/medium_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonEqual"
        app:layout_constraintStart_toEndOf="@+id/buttonEqual" />

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/orange"
        android:minWidth="48dp"
        android:text="="
        android:textSize="@dimen/medium_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonDott"
        app:layout_constraintStart_toEndOf="@+id/buttonDott" />

    <Button
        android:id="@+id/buttonSubtraction"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/orange"
        android:minWidth="48dp"
        android:text="-"
        android:textSize="@dimen/medium_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/button3"
        app:layout_constraintStart_toEndOf="@+id/button3" />

    <TextView
        android:id="@+id/operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/large_font"
        app:layout_constraintEnd_toEndOf="@+id/newNumber"
        app:layout_constraintStart_toStartOf="@+id/newNumber"
        tools:layout_editor_absoluteY="125dp" />

    <EditText
        android:id="@+id/newNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:textColor="@color/light_grey"
        android:textSize="@dimen/large_font"
        android:inputType="numberSigned|numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <Button
        android:id="@+id/eraseButton"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/orange"
        android:minWidth="48dp"
        android:text="C"
        android:textSize="@dimen/medium_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonPlus"
        app:layout_constraintStart_toEndOf="@+id/buttonPlus" />

    <Button
        android:id="@+id/buttonPi"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/orange"
        android:minWidth="48dp"
        android:text="Ï€"
        android:textSize="@dimen/medium_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonMultiplication"
        app:layout_constraintStart_toEndOf="@+id/buttonMultiplication" />

    <Button
        android:id="@+id/buttonRoot"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/orange"
        android:minWidth="48dp"
        android:text="âˆš"
        android:textSize="@dimen/medium_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonDiviation"
        app:layout_constraintStart_toEndOf="@+id/buttonDiviation" />

    <Button
        android:id="@+id/button35"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/orange"
        android:minWidth="48dp"
        android:text="xÂ²"
        android:textSize="@dimen/medium_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonSubtraction"
        app:layout_constraintStart_toEndOf="@+id/buttonSubtraction" />

</androidx.constraintlayout.widget.ConstraintLayout>